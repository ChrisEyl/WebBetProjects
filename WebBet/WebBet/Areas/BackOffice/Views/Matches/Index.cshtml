@model IEnumerable<WebBet.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Team1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OddTeam1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OddTeam2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OddDraw)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OddTeam1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OddTeam2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OddDraw)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-edit"></i></a> |
                <a asp-action="Duplicate" asp-route-id="@item.Id"><i class="glyphicon glyphicon-duplicate"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-level-up"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="glyphicon glyphicon-trash"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
