@model User

@{
    Layout = "_LayoutForm";
}

@*@{
    ViewData["Title"] = "Create";
}*@

@section TitleForm {
    <h2>S'inscrire</h2>
}

@*action en cours action="#*@
@*<form action="#" method="post">*@

<form asp-route="sinscrire" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        @*<label class="control-label" for="form-group-input">My label</label>*@
        <label class="control-label" asp-for="Name"></label>
        @*<input type="text" class="form-control" id="form-group-input" placeholder="My label">*@
        <input class="form-control" asp-for="Name" />
        <span class="text_danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text_danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text_danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span class="text_danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ConfirmedPasssword"></label>
        <input class="form-control" asp-for="ConfirmedPasssword" />
        <span class="text_danger" asp-validation-for="ConfirmedPasssword"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="BirthDate"></label>
        <input class="form-control" asp-for="BirthDate" />
        <span class="text_danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
</form>
